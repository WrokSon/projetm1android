<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:text="Nouveau Item"
        android:textColor="@color/black"
        android:fontFamily="@font/font_title"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Pofondeur : 0 m"
        android:id="@+id/new_item_profondeur"
        android:fontFamily="@font/font_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/newitem_image"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <TextView
                android:text="Titre Item"
                android:textColor="@color/black"
                android:fontFamily="@font/font_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newitem_title" />
            <TextView
                android:text="description"
                android:fontFamily="@font/font_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:id="@+id/newitem_desc" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>